@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Subcategory List";
}

<div class="container shadow p-5">
    @if (TempData["SuccessMsg"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMsg"]
        </div>
    }
    <h1 class="text-center">Subcategory List</h1>
    <div class="col mb-3">
        <a asp-controller="SubCategories" asp-action="Create" class="btn btn-primary">Add Subcategory</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">Subcategory Id</th>
                <th scope="col">Subcategory Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="30%">
                        @item.SubCategoryId
                    </td>
                    <td width="40%">
                        @item.SubCategoryName
                    </td>
                    <td width="30%">
                        <a asp-controller="SubCategories" asp-action="Edit" asp-route-id="@item.SubCategoryId" class="btn btn-primary">Edit</a>&nbsp;
                        <a asp-controller="SubCategories" asp-action="Delete" asp-route-id="@item.SubCategoryId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
